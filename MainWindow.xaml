<Window x:Class="OrderWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OrderWatch - 币安期货下单系统" Height="900" Width="1400"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="0" Background="#F5F5F5">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <CheckBox Content="自动刷新" IsChecked="{Binding AutoRefreshEnabled}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar Width="100" Height="15" IsIndeterminate="{Binding IsLoading}"/>
            </StatusBarItem>
        </StatusBar>

        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧列 -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    
                    <!-- 1. 信息区 -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="📊 账户信息" Style="{StaticResource HeaderStyle}"/>
                            
                            <!-- 账户选择 -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="选择账户:" VerticalAlignment="Center" Width="80"/>
                                <ComboBox ItemsSource="{Binding Accounts}" 
                                          SelectedItem="{Binding SelectedAccount}"
                                          DisplayMemberPath="Name"
                                          Width="200"/>
                                <Button Content="+" Command="{Binding AddAccountCommand}" Margin="5,0,0,0" Width="30"/>
                                <Button Content="编辑" Command="{Binding EditAccountCommand}" Margin="5,0,0,0" Width="50"
                                        IsEnabled="{Binding SelectedAccount, Converter={x:Static ObjectDataProvider.Instance}}"/>
                                <Button Content="删除" Command="{Binding DeleteAccountCommand}" Margin="5,0,0,0" Width="50"
                                        IsEnabled="{Binding SelectedAccount, Converter={x:Static ObjectDataProvider.Instance}}"/>
                            </StackPanel>

                            <!-- 账户信息显示 -->
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding SelectedAccount.TotalWalletBalance, StringFormat='钱包余额: {0:F2} USDT'}" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedAccount.TotalEquity, StringFormat='总权益: {0:F2} USDT'}" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedAccount.TotalUnrealizedProfit, StringFormat='未实现盈亏: {0:F2} USDT'}" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedAccount.AvailableBalance, StringFormat='可用余额: {0:F2} USDT'}" Margin="0,2"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding SelectedAccount.RiskCapital, StringFormat='风险资金: {0:F2} USDT'}" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedAccount.TotalInitialMargin, StringFormat='初始保证金: {0:F2} USDT'}" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedAccount.TotalMaintMargin, StringFormat='维持保证金: {0:F2} USDT'}" Margin="0,2"/>
                                    <TextBlock Text="{Binding SelectedAccount.MaxWithdrawAmount, StringFormat='最大提现: {0:F2} USDT'}" Margin="0,2"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 2. 持仓区 -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="📈 当前持仓" Style="{StaticResource HeaderStyle}"/>
                            
                            <DataGrid ItemsSource="{Binding Positions}" 
                                      SelectedItem="{Binding SelectedPosition}"
                                      AutoGenerateColumns="False"
                                      Height="200"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80"/>
                                    <DataGridTextColumn Header="方向" Binding="{Binding PositionSideDisplay}" Width="60"/>
                                    <DataGridTextColumn Header="数量" Binding="{Binding PositionAmt, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="开仓价" Binding="{Binding EntryPrice, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="标记价" Binding="{Binding MarkPrice, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="盈亏" Binding="{Binding UnRealizedProfit, StringFormat=F2}" Width="80"/>
                                    <DataGridTextColumn Header="杠杆" Binding="{Binding Leverage}" Width="50"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    <!-- 3. 委托区 -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="📋 开放委托" Style="{StaticResource HeaderStyle}"/>
                            
                            <DataGrid ItemsSource="{Binding Orders}" 
                                      SelectedItem="{Binding SelectedOrder}"
                                      AutoGenerateColumns="False"
                                      Height="200"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80"/>
                                    <DataGridTextColumn Header="方向" Binding="{Binding SideDisplay}" Width="60"/>
                                    <DataGridTextColumn Header="类型" Binding="{Binding TypeDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="数量" Binding="{Binding Quantity, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="价格" Binding="{Binding Price, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="状态" Binding="{Binding StatusDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="时间" Binding="{Binding UpdateTimeDisplay}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="刷新委托" Command="{Binding RefreshDataCommand}" Margin="0,0,10,0"/>
                                <Button Content="取消选中" Command="{Binding CancelOrderCommand}" 
                                        IsEnabled="{Binding SelectedOrder, Converter={x:Static ObjectDataProvider.Instance}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- 右侧列 -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    
                    <!-- 4. 条件区 -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="⏰ 条件单" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="条件单功能开发中..." Foreground="Gray" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <!-- 5. 下单区 -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="🚀 下单交易" Style="{StaticResource HeaderStyle}"/>
                            
                            <!-- 合约信息 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="合约:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Text="{Binding Symbol}" Width="120"/>
                                        <Button Content="+" Command="{Binding AddCandidateSymbolCommand}" Margin="5,0,0,0" Width="30"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="最新价:" VerticalAlignment="Center" Width="60"/>
                                        <TextBlock Text="{Binding LatestPrice, StringFormat=F4}" FontWeight="Bold" Foreground="Red"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="涨跌幅:" VerticalAlignment="Center" Width="60"/>
                                        <TextBlock Text="{Binding PriceChangePercent, StringFormat=F2}%" 
                                                   Foreground="{Binding PriceChangePercent, Converter={x:Static ObjectDataProvider.Instance}}"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="杠杆:" VerticalAlignment="Center" Width="60"/>
                                        <ComboBox SelectedValue="{Binding Leverage}" Width="80">
                                            <ComboBoxItem Content="1"/>
                                            <ComboBoxItem Content="2"/>
                                            <ComboBoxItem Content="5"/>
                                            <ComboBoxItem Content="10"/>
                                            <ComboBoxItem Content="20"/>
                                            <ComboBoxItem Content="50"/>
                                            <ComboBoxItem Content="100"/>
                                        </ComboBox>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="止损比例:" VerticalAlignment="Center" Width="60"/>
                                        <TextBox Text="{Binding StopLossRatio}" Width="80"/>
                                        <TextBlock Text="%" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>

                            <!-- 交易参数 -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- 市价单区块 -->
                                <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="10" Margin="0,0,5,0">
                                    <StackPanel>
                                        <TextBlock Text="💰 市价单" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,10"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="方向:" VerticalAlignment="Center" Width="50"/>
                                            <RadioButton Content="买入" IsChecked="{Binding Side, Converter={x:Static ObjectDataProvider.Instance}}" Margin="5,0"/>
                                            <RadioButton Content="卖出" IsChecked="{Binding Side, Converter={x:Static ObjectDataProvider.Instance}}" Margin="5,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="数量:" VerticalAlignment="Center" Width="50"/>
                                            <TextBox Text="{Binding Quantity}" Width="100"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 限价单区块 -->
                                <Border Grid.Column="1" BorderBrush="#FF9800" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="🎯 限价单" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,10"/>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="类型:" VerticalAlignment="Center" Width="50"/>
                                            <RadioButton Content="市价" IsChecked="{Binding OrderType, Converter={x:Static ObjectDataProvider.Instance}}" Margin="5,0"/>
                                            <RadioButton Content="限价" IsChecked="{Binding OrderType, Converter={x:Static ObjectDataProvider.Instance}}" Margin="5,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel Orientation="Horizontal" Margin="0,5">
                                            <TextBlock Text="价格:" VerticalAlignment="Center" Width="50"/>
                                            <TextBox Text="{Binding Price}" Width="100" IsEnabled="{Binding OrderType, Converter={x:Static ObjectDataProvider.Instance}}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <!-- 下单按钮 -->
                            <Button Content="🚀 确认下单" Command="{Binding PlaceOrderCommand}" 
                                    Height="40" FontSize="16" FontWeight="Bold"
                                    Background="#2196F3" Foreground="White"
                                    IsEnabled="{Binding Symbol, Converter={x:Static ObjectDataProvider.Instance}}"/>
                        </StackPanel>
                    </Border>

                    <!-- 6. 候选币列表区 -->
                    <Border Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="📝 候选币列表" Style="{StaticResource HeaderStyle}"/>
                            
                            <DataGrid ItemsSource="{Binding CandidateSymbols}" 
                                      SelectedItem="{Binding SelectedCandidateSymbol}"
                                      AutoGenerateColumns="False"
                                      Height="200"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="100"/>
                                    <DataGridTextColumn Header="最新价" Binding="{Binding LatestPriceDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="涨跌幅" Binding="{Binding PriceChangePercentDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="更新时间" Binding="{Binding LastUpdateTimeDisplay}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="选择" Command="{Binding SelectCandidateSymbolCommand}" 
                                        IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static ObjectDataProvider.Instance}}" Margin="0,0,10,0"/>
                                <Button Content="删除" Command="{Binding RemoveCandidateSymbolCommand}" 
                                        IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static ObjectDataProvider.Instance}}" Margin="0,0,10,0"/>
                                <Button Content="刷新价格" Command="{Binding RefreshDataCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
