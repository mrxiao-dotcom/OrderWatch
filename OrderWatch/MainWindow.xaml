<Window x:Class="OrderWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OrderWatch.Converters"
        Title="OrderWatch - 币安期货下单系统" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <local:IndexConverter x:Key="IndexConverter"/>
        <local:ProfitLossColorConverter x:Key="ProfitLossColorConverter"/>
        <local:PriceChangeColorConverter x:Key="PriceChangeColorConverter"/>
        
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Auto">
        <Grid MinHeight="900">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="0" Background="#F5F5F5">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedSymbolInfo, StringFormat='合约: {0}'}" 
                           Foreground="#2196F3" FontWeight="Bold" Margin="10,0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <CheckBox Content="自动刷新" IsChecked="{Binding AutoRefreshEnabled}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar Width="100" Height="15" IsIndeterminate="{Binding IsLoading}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <Button Content="📋 日志查看器" Command="{Binding OpenLogViewerCommand}" 
                        Background="#2196F3" Foreground="White" Padding="10,2"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <Button Content="📊 交易历史" Command="{Binding OpenTradeHistoryCommand}" 
                        Background="#FF5722" Foreground="White" Padding="10,2"/>
            </StatusBarItem>
        </StatusBar>

        <!-- 账户信息行 -->
        <Border Grid.Row="1" Style="{StaticResource SectionStyle}" Margin="20,10,20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：账户选择和管理 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="选择账户:" VerticalAlignment="Center" Width="80"/>
                    <ComboBox ItemsSource="{Binding Accounts}" 
                              SelectedItem="{Binding SelectedAccount}"
                              DisplayMemberPath="Name"
                              Width="200"/>
                    <Button Content="+" Command="{Binding AddAccountCommand}" Margin="5,0,0,0" Width="30"/>
                    <Button Content="编辑" Command="{Binding EditAccountCommand}" Margin="5,0,0,0" Width="50"
                            IsEnabled="{Binding SelectedAccount, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                    <Button Content="删除" Command="{Binding DeleteAccountCommand}" Margin="5,0,0,0" Width="50"
                            IsEnabled="{Binding SelectedAccount, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                </StackPanel>
                
                <!-- 中间：账户信息显示 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedAccount.TotalWalletBalance, StringFormat='钱包余额: {0:F2} USDT'}" Margin="5,0"/>
                    <TextBlock Text="{Binding SelectedAccount.TotalEquity, StringFormat='总权益: {0:F2} USDT'}" Margin="5,0"/>
                    <TextBlock Text="{Binding SelectedAccount.AvailableBalance, StringFormat='可用余额: {0:F2} USDT'}" Margin="5,0"/>
                    <TextBlock Text="{Binding SelectedAccount.RiskCapitalTimes, StringFormat='风险次数: {0}次'}" Margin="5,0" Foreground="Orange"/>
                    <Button Content="-" Command="{Binding DecreaseRiskCapitalCommand}" Width="20" Height="18" FontSize="8" Margin="2,0" Background="#F44336" Foreground="White" ToolTip="减少风险次数"/>
                    <Button Content="+" Command="{Binding IncreaseRiskCapitalCommand}" Width="20" Height="18" FontSize="8" Margin="2,0" Background="#4CAF50" Foreground="White" ToolTip="增加风险次数"/>
                    <TextBlock Text="{Binding SelectedAccount.LongMarketValue, StringFormat='多头市值: {0:F2} USDT'}" Margin="5,0"/>
                    <TextBlock Text="{Binding SelectedAccount.ShortMarketValue, StringFormat='空头市值: {0:F2} USDT'}" Margin="5,0"/>
                    <TextBlock Text="{Binding SelectedAccount.Leverage, StringFormat='杠杆率: {0:F2}x'}" Margin="5,0"/>
                </StackPanel>
                

            </Grid>
        </Border>

                <!-- 主内容区域 -->
        <Grid Grid.Row="2" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：候选币列表 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Style="{StaticResource SectionStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock Text="📝 候选币列表" Style="{StaticResource HeaderStyle}"/>
                        
                        <!-- 合约输入区域 -->
                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3" Padding="10" Margin="0,0,0,10" Background="#FAFAFA">
                            <StackPanel>
                                <TextBlock Text="添加合约" FontWeight="Bold" Margin="0,0,0,5" Foreground="#2196F3"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0" Margin="0,0,5,0">
                                        <TextBox x:Name="SymbolInputBox" 
                                                 Text="{Binding NewSymbolInput, UpdateSourceTrigger=PropertyChanged}"
                                                 VerticalContentAlignment="Center"
                                                 Height="30"
                                                 FontSize="12"
                                                 KeyDown="SymbolInputBox_KeyDown"
                                                 TextChanged="SymbolInputBox_TextChanged"
                                                 LostFocus="SymbolInputBox_LostFocus"
                                                 ToolTip="输入合约名称，支持自动完成，按回车选择"/>
                                        <Popup x:Name="SymbolSuggestionsPopup" 
                                               PlacementTarget="{Binding ElementName=SymbolInputBox}"
                                               Placement="Bottom"
                                               IsOpen="False"
                                               StaysOpen="True"
                                               AllowsTransparency="True"
                                               Width="{Binding ElementName=SymbolInputBox, Path=ActualWidth}">
                                            <Border Background="White" 
                                                    BorderBrush="#CCCCCC" 
                                                    BorderThickness="1"
                                                    CornerRadius="3"
                                                    MaxHeight="200">
                                                <ListBox x:Name="SymbolSuggestionsList"
                                                         ItemsSource="{Binding SymbolSuggestions}"
                                                         MaxHeight="180"
                                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                         KeyDown="SymbolSuggestionsList_KeyDown"
                                                         MouseDoubleClick="SymbolSuggestionsList_MouseDoubleClick"
                                                         SelectionChanged="SymbolSuggestionsList_SelectionChanged"
                                                         KeyboardNavigation.DirectionalNavigation="Cycle"
                                                         Focusable="True"
                                                         IsTabStop="True">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" 
                                                                       Padding="8,4"
                                                                       FontSize="12"
                                                                       Cursor="Hand"
                                                                       MouseLeftButtonDown="SymbolSuggestion_MouseLeftButtonDown"/>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                    <Button Content="添加" 
                                            Command="{Binding AddSymbolFromInputCommand}"
                                            Grid.Column="1"
                                            Width="60"
                                            Height="30"
                                            Background="#2196F3"
                                            Foreground="White"
                                            IsEnabled="{Binding NewSymbolInput, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                </Grid>
                                
                                <!-- 合约建议列表 -->
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3" 
                                        Background="White" Margin="0,5,0,0" 
                                        Visibility="{Binding SymbolSuggestions.Count, Converter={x:Static local:NotNullToBoolConverter.Instance}}">
                                    <ListBox ItemsSource="{Binding SymbolSuggestions}" 
                                             MaxHeight="120" 
                                             Background="White"
                                             BorderThickness="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" 
                                                           Padding="8,4" 
                                                           Cursor="Hand"
                                                           MouseLeftButtonDown="SymbolSuggestion_MouseLeftButtonDown"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Border>
                                
                                <TextBlock Text="支持格式：BTC、btc、BTCUSDT、btcusdt等，自动纠正和补全" 
                                           FontSize="10" Foreground="#666" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- 候选币数据网格 - 填满剩余空间 -->
                <Border Grid.Row="1" Style="{StaticResource SectionStyle}" Margin="0,0,10,10">
                    <DataGrid ItemsSource="{Binding CandidateSymbols}" 
                              SelectedItem="{Binding SelectedCandidateSymbol}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              MouseDoubleClick="CandidateSymbolsDataGrid_MouseDoubleClick"
                              KeyDown="CandidateSymbolsDataGrid_KeyDown">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="粘贴合约" Command="{Binding PasteSymbolCommand}" 
                                          InputGestureText="Ctrl+V"/>
                                <MenuItem Header="添加合约" Command="{Binding AddCandidateSymbolCommand}"/>
                                <Separator/>
                                <MenuItem Header="选择" Command="{Binding SelectCandidateSymbolCommand}" 
                                          IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                <MenuItem Header="删除" Command="{Binding RemoveCandidateSymbolCommand}" 
                                          IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                <Separator/>
                                <MenuItem Header="刷新" Command="{Binding RefreshDataCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
                
                <!-- 候选币操作按钮 -->
                <Border Grid.Row="2" Style="{StaticResource SectionStyle}" Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="选择" Command="{Binding SelectCandidateSymbolCommand}" 
                                IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}" 
                                Width="60" Margin="0,0,5,0"/>
                        <Button Content="删除" Command="{Binding RemoveCandidateSymbolCommand}" 
                                IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}" 
                                Width="60" Margin="0,0,5,0"/>
                        <Button Content="刷新" Command="{Binding RefreshDataCommand}" Width="60"/>
                        <Button Content="粘贴" Command="{Binding PasteSymbolCommand}" Width="60" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

                                                  <!-- 右侧：持仓列表 + 委托和条件单列表 + 下单设置和三个下单窗口 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="150"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*" MinHeight="150"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 第一行：持仓区 -->
                <Border Grid.Row="0" Style="{StaticResource SectionStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="📈 当前持仓" Style="{StaticResource HeaderStyle}"/>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                      HorizontalScrollBarVisibility="Auto"
                                      MaxHeight="300">
                            <DataGrid ItemsSource="{Binding Positions}" 
                                      SelectedItem="{Binding SelectedPosition}"
                                      AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      MouseDoubleClick="PositionsDataGrid_MouseDoubleClick">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="序号" Width="50">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="." RelativeSource="{RelativeSource AncestorType=DataGridRow}" Converter="{StaticResource IndexConverter}"/>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80"/>
                                    <DataGridTextColumn Header="数量" Binding="{Binding PositionAmt, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="进场价" Binding="{Binding EntryPrice, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="方向" Binding="{Binding PositionSideDisplay}" Width="60"/>
                                    <DataGridTextColumn Header="杠杆" Binding="{Binding Leverage}" Width="50"/>
                                    <DataGridTemplateColumn Header="保证金" Width="60">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding MarginTypeDisplay}" 
                                                          HorizontalAlignment="Center"
                                                          FontWeight="Bold">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding MarginType}" Value="ISOLATED">
                                                                    <Setter Property="Foreground" Value="Green"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding MarginType}" Value="CROSS">
                                                                    <Setter Property="Foreground" Value="Orange"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="最新市值" Binding="{Binding Notional, StringFormat=F2}" Width="80"/>
                                    <DataGridTemplateColumn Header="浮动盈亏" Width="80">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding UnRealizedProfit, StringFormat=F2}" 
                                                           Foreground="{Binding UnRealizedProfit, Converter={StaticResource ProfitLossColorConverter}}"
                                                           HorizontalAlignment="Right"
                                                           FontWeight="Bold"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="委托数" Binding="{Binding OrderCount}" Width="60"/>
                                    <DataGridTextColumn Header="条件单数" Binding="{Binding ConditionalOrderCount}" Width="70"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
                
                <!-- 第一个分割线：持仓区和委托区之间 -->
                <GridSplitter Grid.Row="1" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Center"
                              Height="5"
                              Background="#E0E0E0"
                              ShowsPreview="True"
                              ResizeBehavior="PreviousAndNext"/>
                
                <!-- 第三行：委托列表和条件单列表 -->
                <Grid Grid.Row="2" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 开放委托 -->
                    <Border Grid.Column="0" Style="{StaticResource SectionStyle}" Margin="0,0,5,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📋 开放委托" Style="{StaticResource HeaderStyle}"/>
                                <Button Content="撤单" 
                                        Command="{Binding CancelOpenOrderCommand}"
                                        Margin="10,0,0,0" 
                                        Padding="8,2"
                                        Background="#FF6B6B" 
                                        Foreground="White"
                                        BorderThickness="0"
                                        IsEnabled="{Binding SelectedOpenOrder, Converter={x:Static local:Converters.IsNotNullConverter}}"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Auto"
                                          MaxHeight="250">
                                <DataGrid ItemsSource="{Binding OpenOrders}" 
                                          SelectedItem="{Binding SelectedOpenOrder}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="70"/>
                                        <DataGridTextColumn Header="数量" Binding="{Binding OrigQty, StringFormat=F4}" Width="70"/>
                                        <DataGridTextColumn Header="已成交" Binding="{Binding ExecutedQty, StringFormat=F4}" Width="60"/>
                                        <DataGridTextColumn Header="委托价格" Binding="{Binding Price, StringFormat=F4}" Width="70"/>
                                        <DataGridTextColumn Header="止损价" Binding="{Binding StopPriceDisplay}" Width="70"/>
                                        <DataGridTextColumn Header="方向" Binding="{Binding SideDisplay}" Width="50"/>
                                        <DataGridTextColumn Header="类型" Binding="{Binding TypeDisplay}" Width="60"/>
                                        <DataGridTextColumn Header="状态" Binding="{Binding StatusDisplay}" Width="60"/>
                                        <DataGridTemplateColumn Header="仓位" Width="30">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ReduceOnlyDisplay}" 
                                                               HorizontalAlignment="Center"
                                                               FontWeight="Bold"
                                                               Foreground="Orange"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                    
                    <!-- 条件单 -->
                    <Border Grid.Column="1" Style="{StaticResource SectionStyle}" Margin="5,0,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏰ 条件单" Style="{StaticResource HeaderStyle}"/>
                                <Button Content="撤单" 
                                        Command="{Binding CancelConditionalOrderCommand}"
                                        Margin="10,0,0,0" 
                                        Padding="8,2"
                                        Background="#FF6B6B" 
                                        Foreground="White"
                                        BorderThickness="0"
                                        IsEnabled="{Binding SelectedConditionalOrder, Converter={x:Static local:Converters.IsNotNullConverter}}"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          HorizontalScrollBarVisibility="Auto"
                                          MaxHeight="250">
                                <DataGrid ItemsSource="{Binding ConditionalOrders}" 
                                          SelectedItem="{Binding SelectedConditionalOrder}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="70"/>
                                        <DataGridTextColumn Header="数量" Binding="{Binding Quantity, StringFormat=F4}" Width="60"/>
                                        <DataGridTextColumn Header="触发价" Binding="{Binding TriggerPrice, StringFormat=F4}" Width="70"/>
                                        <DataGridTextColumn Header="委托价格" Binding="{Binding OrderPrice, StringFormat=F4}" Width="70"/>
                                        <DataGridTextColumn Header="方向" Binding="{Binding SideDisplay}" Width="50"/>
                                        <DataGridTextColumn Header="类型" Binding="{Binding TypeDisplay}" Width="60"/>
                                        <DataGridTextColumn Header="状态" Binding="{Binding StatusDisplay}" Width="60"/>
                                        <DataGridTemplateColumn Header="仓位" Width="30">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ReduceOnlyDisplay}" 
                                                               HorizontalAlignment="Center"
                                                               FontWeight="Bold"
                                                               Foreground="Orange"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
        </Grid>

                <!-- 第二个分割线：委托区和下单区之间 -->
                <GridSplitter Grid.Row="3" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Center"
                              Height="5"
                              Background="#E0E0E0"
                              ShowsPreview="True"
                              ResizeBehavior="PreviousAndNext"/>

                                 <!-- 第五行：下单设置和三个下单窗口 -->
                 <Grid Grid.Row="4" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                         <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

                     <!-- 左侧：下单设置区域 -->
                     <Border Grid.Column="0" Style="{StaticResource SectionStyle}" Margin="0,0,10,0">
                <StackPanel>
                             <TextBlock Text="⚙️ 下单设置" Style="{StaticResource HeaderStyle}"/>
                    
                    <!-- 合约信息 -->
                             <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                 <TextBlock Text="合约:" VerticalAlignment="Center" Width="50" FontSize="12"/>
                                 <TextBox Text="{Binding MarketSymbol}" Width="120" Height="22"/>
                                 <Button Content="+" Command="{Binding AddCandidateSymbolCommand}" Margin="3,0,0,0" Width="22" Height="22"/>
                    </StackPanel>
                    
                             <!-- 最新价格 -->
                             <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                 <TextBlock Text="最新价:" VerticalAlignment="Center" Width="50" FontSize="12"/>
                                 <TextBlock Text="{Binding LatestPrice, StringFormat=F4}" FontWeight="Bold" Foreground="Red" FontSize="12"/>
                    </StackPanel>
                    
                                                                                           <!-- 杠杆设置 -->
                                 <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                     <TextBlock Text="杠杆:" VerticalAlignment="Center" Width="50" FontSize="12"/>
                                     <TextBox Text="{Binding MarketLeverage}" Width="80" Height="22" ToolTip="杠杆倍数，可以手动输入或点击快捷按钮"/>
                                     <Button Content="1x" Command="{Binding SetLeverageCommand}" CommandParameter="1" 
                                             Width="28" Height="18" FontSize="8" Margin="3,0,0,0" Background="#2196F3" Foreground="White"/>
                                     <Button Content="3x" Command="{Binding SetLeverageCommand}" CommandParameter="3" 
                                             Width="28" Height="18" FontSize="8" Margin="2,0,0,0" Background="#4CAF50" Foreground="White"/>
                                     <Button Content="5x" Command="{Binding SetLeverageCommand}" CommandParameter="5" 
                                             Width="28" Height="18" FontSize="8" Margin="2,0,0,0" Background="#FF9800" Foreground="White"/>
                                     <Button Content="10x" Command="{Binding SetLeverageCommand}" CommandParameter="10" 
                                             Width="28" Height="18" FontSize="8" Margin="2,0,0,0" Background="#9C27B0" Foreground="White"/>
                                     <Button Content="20x" Command="{Binding SetLeverageCommand}" CommandParameter="20" 
                                             Width="28" Height="18" FontSize="8" Margin="2,0,0,0" Background="#F44336" Foreground="White"/>
                                 </StackPanel>
                    
                             <!-- 数量设置 -->
                             <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                 <TextBlock Text="数量:" VerticalAlignment="Center" Width="50" FontSize="12"/>
                                 <TextBox Text="{Binding MarketQuantity, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="80" Height="22" ToolTip="数量可以手动编辑，双击合约后显示最小精度要求" Name="MarketQuantityTextBox" LostFocus="MarketQuantityTextBox_LostFocus"/>
                                 <TextBlock Text="{Binding MinPrecisionInfo}" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="10" Foreground="#666"/>
                             </StackPanel>
                             
                             <!-- 止损比例 -->
                             <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                 <TextBlock Text="止损比例:" VerticalAlignment="Center" Width="60" FontSize="12"/>
                                 <TextBox Text="{Binding ConditionalStopLossRatio}" Width="60" Height="22"/>
                                 <TextBlock Text="%" VerticalAlignment="Center" Margin="2,0,0,0" FontSize="12"/>
                                 <Button Content="5%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="5" 
                                         Width="28" Height="18" FontSize="8" Margin="3,0,0,0" Background="#2196F3" Foreground="White"/>
                                 <Button Content="10%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="10" 
                                         Width="28" Height="18" FontSize="8" Margin="2,0,0,0" Background="#2196F3" Foreground="White"/>
                                 <Button Content="20%" Command="{Binding SetStopLossRatioCommand}" CommandParameter="20" 
                                         Width="28" Height="18" FontSize="8" Margin="2,0,0,0" Background="#2196F3" Foreground="White"/>
                    </StackPanel>
                    
                                                                                           <!-- 以损定量金额 -->
                                 <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                     <TextBlock Text="以损定量:" VerticalAlignment="Center" Width="60" FontSize="12"/>
                                                                         <TextBox Text="{Binding RiskAmount, Mode=TwoWay, UpdateSourceTrigger=LostFocus, StringFormat=F0}" Width="80" Height="22" 
                                            ToolTip="请输入正整数金额，系统会自动四舍五入为整数"/>
                                                                          <Button Content="加倍" Command="{Binding AdjustRiskAmountCommand}" CommandParameter="double" 
                                            Width="32" Height="18" FontSize="8" Margin="3,0,0,0" Background="#FF9800" Foreground="White"/>
                                     <Button Content="加半" Command="{Binding AdjustRiskAmountCommand}" CommandParameter="half" 
                                            Width="32" Height="18" FontSize="8" Margin="2,0,0,0" Background="#4CAF50" Foreground="White"/>
                                     <Button Content="减半" Command="{Binding AdjustRiskAmountCommand}" CommandParameter="reduce_half" 
                                            Width="32" Height="18" FontSize="8" Margin="2,0,0,0" Background="#F44336" Foreground="White"/>
                                 </StackPanel>
                    
                             <!-- 方向选择 -->
                             <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                 <RadioButton Content="买入" IsChecked="{Binding MarketSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=BUY}" Margin="0,0,10,0" FontSize="12"/>
                                 <RadioButton Content="卖出" IsChecked="{Binding MarketSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=SELL}" Margin="0,0,0,0" FontSize="12"/>
                             </StackPanel>
                </StackPanel>
            </Border>

                     <!-- 右侧：市价/限价下单 + 条件单 -->
                     <Grid Grid.Column="1">
                         <Grid.ColumnDefinitions>
                             <ColumnDefinition Width="*"/>
                             <ColumnDefinition Width="*"/>
                         </Grid.ColumnDefinitions>
                         
                         <!-- 左侧：市价下单和限价下单 -->
                         <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="10" Margin="0,0,5,0">
                <StackPanel>
                                 <!-- 市价下单 -->
                                 <TextBlock Text="💰 市价下单" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,5" FontSize="13"/>
                                 <Grid Margin="0,0,0,0">
                                     <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="*"/>
                                         <ColumnDefinition Width="*"/>
                                     </Grid.ColumnDefinitions>
                                     <Grid.RowDefinitions>
                                         <RowDefinition Height="Auto"/>
                                         <RowDefinition Height="Auto"/>
                                     </Grid.RowDefinitions>
                                     
                                     <Button Grid.Row="0" Grid.Column="0" Content="🚀 市价下单" Command="{Binding PlaceMarketOrderCommand}" 
                                             Height="25" FontSize="10" FontWeight="Bold" Margin="0,0,2,2"
                                             Background="#4CAF50" Foreground="White"/>
                                     <Button Grid.Row="0" Grid.Column="1" Content="💰 保本加仓" Command="{Binding PlaceProfitOrderCommand}" 
                                             Height="25" FontSize="10" FontWeight="Bold" Margin="2,0,0,2"
                                             Background="#2196F3" Foreground="White"/>
                                     <Button Grid.Row="1" Grid.Column="0" Content="🔴 平仓" Command="{Binding ClosePositionCommand}" 
                                             Height="25" FontSize="10" FontWeight="Bold" Margin="0,2,2,0"
                                             Background="#F44336" Foreground="White"/>
                                     <Button Grid.Row="1" Grid.Column="1" Content="⚡ 一键全平" Command="{Binding CloseAllPositionsCommand}" 
                                             Height="25" FontSize="10" FontWeight="Bold" Margin="2,2,0,0"
                                             Background="#9C27B0" Foreground="White"/>
                                 </Grid>
                    
                                 <Separator Margin="0,8,0,8" Background="#E0E0E0"/>
                                 
                                 <!-- 限价下单 -->
                                 <TextBlock Text="🎯 限价下单" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,5" FontSize="13"/>
                                 
                                 <!-- 限价设置区域 -->
                                 <Border BorderBrush="#FF9800" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,0,0,8" Background="#FFF8F0">
                                     <StackPanel>
                                         <TextBlock Text="限价设置" FontWeight="Bold" Foreground="#FF9800" FontSize="11" Margin="0,0,0,5"/>
                                         
                                                                                                                            <!-- 价格输入和快捷键 -->
                                         <StackPanel Margin="0,0,0,5">
                                             <!-- 上方：百分比显示 -->
                                             <TextBlock Text="{Binding LimitPriceDeviation}" HorizontalAlignment="Center" 
                                                       FontSize="9" Foreground="#666" Margin="0,0,0,5" MinWidth="50"/>
                                             
                                             <!-- 中间：按钮和输入框 -->
                                             <Grid>
                                                 <Grid.ColumnDefinitions>
                                                     <ColumnDefinition Width="*"/>
                                                     <ColumnDefinition Width="Auto"/>
                                                     <ColumnDefinition Width="*"/>
                                                 </Grid.ColumnDefinitions>
                                                 
                                                 <!-- 左侧：负数按钮 -->
                                                 <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                                                     <Button Content="-20%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="0.80" 
                                                             Width="35" Height="18" FontSize="7" Margin="0,0,2,0" Background="#F44336" Foreground="White"/>
                                                     <Button Content="-10%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="0.90" 
                                                             Width="35" Height="18" FontSize="7" Margin="0,0,2,0" Background="#F44336" Foreground="White"/>
                                                     <Button Content="-5%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="0.95" 
                                                             Width="35" Height="18" FontSize="7" Margin="0,0,2,0" Background="#F44336" Foreground="White"/>
                                                     <Button Content="-1%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="0.99" 
                                                             Width="35" Height="18" FontSize="7" Margin="0,0,2,0" Background="#F44336" Foreground="White"/>
                                                 </StackPanel>
                                                 
                                                                                                                                                                                                 <!-- 中间：价格输入框 -->
                                               <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                                                   <TextBlock Text="{Binding LimitPriceChangePercent}" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold" Margin="0,0,0,2"
                                                              Foreground="{Binding LimitPriceChangePercent, Converter={StaticResource PriceChangeColorConverter}}"/>
                                                   <TextBox Text="{Binding LimitPrice}" Width="80" Height="20" FontSize="10" VerticalContentAlignment="Center"/>
                                                   <TextBlock Text="{Binding PrecisionInfo}" HorizontalAlignment="Center" FontSize="8" Foreground="#666" Margin="0,1,0,0"/>
                                               </StackPanel>
                                                 
                                                 <!-- 右侧：正数按钮 -->
                                                 <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                                                     <Button Content="+1%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="1.01" 
                                                             Width="35" Height="18" FontSize="7" Margin="2,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                     <Button Content="+5%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="1.05" 
                                                             Width="35" Height="18" FontSize="7" Margin="2,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                     <Button Content="+10%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="1.10" 
                                                             Width="35" Height="18" FontSize="7" Margin="2,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                     <Button Content="+20%" Command="{Binding AdjustLimitPriceCommand}" CommandParameter="1.20" 
                                                             Width="35" Height="18" FontSize="7" Margin="2,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                 </StackPanel>
                                             </Grid>
                                         </StackPanel>
                    </StackPanel>
                                 </Border>
                    
                                         <Button Content="🎯 限价下单" Command="{Binding PlaceLimitOrderCommand}" 
                                          Height="30" FontSize="12" FontWeight="Bold"
                             Background="#FF9800" Foreground="White"
                                          Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

                         <!-- 右侧：条件单 -->
                         <Border Grid.Column="1" BorderBrush="#9C27B0" BorderThickness="2" CornerRadius="5" Padding="8" Margin="5,0,0,0">
                             <StackPanel>
                                 <TextBlock Text="⏰ 条件单" FontWeight="Bold" Foreground="#9C27B0" Margin="0,0,0,5" FontSize="13"/>
                                 
                                 <!-- 左右分列布局 -->
                                 <Grid>
                                     <Grid.ColumnDefinitions>
                                         <ColumnDefinition Width="*"/>
                                         <ColumnDefinition Width="*"/>
                                     </Grid.ColumnDefinitions>
                                 
                                     <!-- 左列：做多条件 -->
                                     <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="3" Padding="5" Margin="0,0,3,0" Background="#F8FFF8">
                <StackPanel>
                                                                                      <TextBlock Text="🟢 做多条件" FontWeight="Bold" Foreground="#4CAF50" FontSize="11" Margin="0,0,0,3"/>
                                          
                                                                                                                               <!-- 突破价格设置 -->
                                          <StackPanel Margin="0,0,0,5">
                                              <!-- 上方：百分比显示 -->
                                              <TextBlock Text="{Binding LongBreakoutPriceDeviation}" HorizontalAlignment="Center" 
                                                        FontSize="9" Foreground="#666" Margin="0,0,0,5" MinWidth="50"/>
                                              
                                              <!-- 中间：按钮和输入框 -->
                                              <Grid>
                                                  <Grid.ColumnDefinitions>
                                                      <ColumnDefinition Width="*"/>
                                                      <ColumnDefinition Width="Auto"/>
                                                      <ColumnDefinition Width="*"/>
                                                  </Grid.ColumnDefinitions>
                                                  
                                                  <!-- 左侧：负数按钮 -->
                                                  <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                                                      <Button Content="-20%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="0.80" 
                                                              Width="25" Height="16" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                      <Button Content="-10%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="0.90" 
                                                              Width="25" Height="16" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                      <Button Content="-5%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="0.95" 
                                                              Width="25" Height="16" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                      <Button Content="-1%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="0.99" 
                                                              Width="25" Height="16" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                  </StackPanel>
                                                  
                                                  <!-- 中间：价格输入框 -->
                                                  <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                                                      <TextBlock Text="{Binding LongBreakoutPriceChangePercent}" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold" Margin="0,0,0,2"
                                                                 Foreground="{Binding LongBreakoutPriceChangePercent, Converter={StaticResource PriceChangeColorConverter}}"/>
                                                      <TextBox Text="{Binding LongBreakoutPrice}" Width="80" Height="20" FontSize="11" VerticalContentAlignment="Center"/>
                                                      <TextBlock Text="{Binding PrecisionInfo}" HorizontalAlignment="Center" FontSize="8" Foreground="#666" Margin="0,1,0,0"/>
                                                  </StackPanel>
                                                  
                                                  <!-- 右侧：正数按钮 -->
                                                  <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                                                      <Button Content="+1%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="1.01" 
                                                              Width="25" Height="16" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                      <Button Content="+5%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="1.05" 
                                                              Width="25" Height="16" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                      <Button Content="+10%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="1.10" 
                                                              Width="25" Height="16" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                      <Button Content="+20%" Command="{Binding AdjustLongBreakoutPriceCommand}" CommandParameter="1.20" 
                                                              Width="25" Height="16" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                  </StackPanel>
                                              </Grid>
                                          </StackPanel>
                                          
                                          <Button Content="🚀 设置做多条件单" Command="{Binding AddLongConditionalOrderCommand}" 
                                                  Height="25" FontSize="11" FontWeight="Bold"
                                                  Background="#4CAF50" Foreground="White"
                                                  Margin="0,5,0,0"/>
                    </StackPanel>
                                  </Border>
                                     
                                     <!-- 右列：做空条件 -->
                                     <Border Grid.Column="1" BorderBrush="#F44336" BorderThickness="1" CornerRadius="3" Padding="5" Margin="3,0,0,0" Background="#FFF8F8">
                                      <StackPanel>
                                                                                      <TextBlock Text="🔴 做空条件" FontWeight="Bold" Foreground="#F44336" FontSize="11" Margin="0,0,0,3"/>
                                          
                                                                                                                               <!-- 跌破价格设置 -->
                                          <StackPanel Margin="0,0,0,5">
                                              <!-- 上方：百分比显示 -->
                                              <TextBlock Text="{Binding ShortBreakdownPriceDeviation}" HorizontalAlignment="Center" 
                                                        FontSize="9" Foreground="#666" Margin="0,0,0,5" MinWidth="50"/>
                                              
                                              <!-- 中间：按钮和输入框 -->
                                              <Grid>
                                                  <Grid.ColumnDefinitions>
                                                      <ColumnDefinition Width="*"/>
                                                      <ColumnDefinition Width="Auto"/>
                                                      <ColumnDefinition Width="*"/>
                                                  </Grid.ColumnDefinitions>
                                                  
                                                  <!-- 左侧：负数按钮 -->
                                                  <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                                                      <Button Content="-20%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="0.80" 
                                                              Width="30" Height="18" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                      <Button Content="-10%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="0.90" 
                                                              Width="30" Height="18" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                      <Button Content="-5%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="0.95" 
                                                              Width="30" Height="18" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                      <Button Content="-1%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="0.99" 
                                                              Width="30" Height="18" FontSize="7" Margin="0,0,1,0" Background="#F44336" Foreground="White"/>
                                                  </StackPanel>
                                                  
                                                  <!-- 中间：价格输入框 -->
                                                  <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                                                      <TextBlock Text="{Binding ShortBreakdownPriceChangePercent}" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold" Margin="0,0,0,2"
                                                                 Foreground="{Binding ShortBreakdownPriceChangePercent, Converter={StaticResource PriceChangeColorConverter}}"/>
                                                      <TextBox Text="{Binding ShortBreakdownPrice}" Width="80" Height="20" FontSize="11" VerticalContentAlignment="Center"/>
                                                      <TextBlock Text="{Binding PrecisionInfo}" HorizontalAlignment="Center" FontSize="8" Foreground="#666" Margin="0,1,0,0"/>
                                                  </StackPanel>
                                                  
                                                  <!-- 右侧：正数按钮 -->
                                                  <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,0,0,0">
                                                      <Button Content="+1%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="1.01" 
                                                              Width="30" Height="18" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                      <Button Content="+5%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="1.05" 
                                                              Width="30" Height="18" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                      <Button Content="+10%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="1.10" 
                                                              Width="30" Height="18" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                      <Button Content="+20%" Command="{Binding AdjustShortBreakdownPriceCommand}" CommandParameter="1.20" 
                                                              Width="30" Height="18" FontSize="7" Margin="1,0,0,0" Background="#4CAF50" Foreground="White"/>
                                                  </StackPanel>
                                              </Grid>
                                          </StackPanel>
                                          
                                          <Button Content="📉 设置做空条件单" Command="{Binding AddShortConditionalOrderCommand}" 
                                                  Height="25" FontSize="11" FontWeight="Bold"
                                                  Background="#F44336" Foreground="White"
                                                  Margin="0,5,0,0"/>
                                      </StackPanel>
                                     </Border>
                                 </Grid>
                             </StackPanel>
                         </Border>
                     </Grid>
                 </Grid>
            </Grid>
        </Grid>


        </Grid>
    </ScrollViewer>
</Window>
