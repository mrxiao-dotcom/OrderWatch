<Window x:Class="OrderWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OrderWatch.Converters"
        Title="{Binding WindowTitle}" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="0" Background="#F5F5F5">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedSymbolInfo, StringFormat='合约: {0}'}" 
                           Foreground="#2196F3" FontWeight="Bold" Margin="10,0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <CheckBox Content="自动刷新" IsChecked="{Binding AutoRefreshEnabled}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar Width="100" Height="15" IsIndeterminate="{Binding IsLoading}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <Button Content="📋 日志查看器" Command="{Binding OpenLogViewerCommand}" 
                        Background="#2196F3" Foreground="White" Padding="10,2"/>
            </StatusBarItem>
        </StatusBar>

        <!-- 账户信息行 -->
        <Border Grid.Row="1" Style="{StaticResource SectionStyle}" Margin="20,10,20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 左侧：账户选择和管理 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="选择账户:" VerticalAlignment="Center" Width="80"/>
                    <ComboBox ItemsSource="{Binding Accounts}" 
                              SelectedItem="{Binding SelectedAccount}"
                              DisplayMemberPath="Name"
                              Width="200"/>
                    <Button Content="+" Command="{Binding AddAccountCommand}" Margin="5,0,0,0" Width="30"/>
                    <Button Content="编辑" Command="{Binding EditAccountCommand}" Margin="5,0,0,0" Width="50"
                            IsEnabled="{Binding SelectedAccount, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                    <Button Content="删除" Command="{Binding DeleteAccountCommand}" Margin="5,0,0,0" Width="50"
                            IsEnabled="{Binding SelectedAccount, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                </StackPanel>
                
                <!-- 中间：账户信息显示 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding SelectedAccount.TotalWalletBalance, StringFormat='钱包余额: {0:F2} USDT'}" Margin="10,0"/>
                    <TextBlock Text="{Binding SelectedAccount.TotalEquity, StringFormat='总权益: {0:F2} USDT'}" Margin="10,0"/>
                    <TextBlock Text="{Binding SelectedAccount.TotalUnrealizedProfit, StringFormat='未实现盈亏: {0:F2} USDT'}" Margin="10,0"/>
                    <TextBlock Text="{Binding SelectedAccount.AvailableBalance, StringFormat='可用余额: {0:F2} USDT'}" Margin="10,0"/>
                </StackPanel>
                
                <!-- 右侧：自动刷新开关 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="自动刷新" IsChecked="{Binding AutoRefreshEnabled}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 主内容区域 -->
        <Grid Grid.Row="2" Margin="20,10,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：候选币列表 -->
            <Border Grid.Column="0" Style="{StaticResource SectionStyle}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="📝 候选币列表" Style="{StaticResource HeaderStyle}"/>
                    
                    <DataGrid ItemsSource="{Binding CandidateSymbols}" 
                              SelectedItem="{Binding SelectedCandidateSymbol}"
                              AutoGenerateColumns="False"
                              Height="400"
                              IsReadOnly="True"
                              MouseDoubleClick="CandidateSymbolsDataGrid_MouseDoubleClick"
                              KeyDown="CandidateSymbolsDataGrid_KeyDown">
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="粘贴合约" Command="{Binding PasteSymbolCommand}" 
                                          InputGestureText="Ctrl+V"/>
                                <MenuItem Header="添加合约" Command="{Binding AddCandidateSymbolCommand}"/>
                                <Separator/>
                                <MenuItem Header="选择" Command="{Binding SelectCandidateSymbolCommand}" 
                                          IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                <MenuItem Header="删除" Command="{Binding RemoveCandidateSymbolCommand}" 
                                          IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                <Separator/>
                                <MenuItem Header="刷新" Command="{Binding RefreshDataCommand}"/>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="选择" Command="{Binding SelectCandidateSymbolCommand}" 
                                IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}" 
                                Width="60" Margin="0,0,5,0"/>
                        <Button Content="删除" Command="{Binding RemoveCandidateSymbolCommand}" 
                                IsEnabled="{Binding SelectedCandidateSymbol, Converter={x:Static local:NotNullToBoolConverter.Instance}}" 
                                Width="60" Margin="0,0,5,0"/>
                        <Button Content="刷新" Command="{Binding RefreshDataCommand}" Width="60"/>
                        <Button Content="粘贴" Command="{Binding PasteSymbolCommand}" Width="60" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 右侧：持仓、委托、条件单 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 第一行：持仓区 -->
                <Border Grid.Row="0" Style="{StaticResource SectionStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="📈 当前持仓" Style="{StaticResource HeaderStyle}"/>
                        
                        <DataGrid ItemsSource="{Binding Positions}" 
                                  SelectedItem="{Binding SelectedPosition}"
                                  AutoGenerateColumns="False"
                                  Height="180"
                                  IsReadOnly="True">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80"/>
                                <DataGridTextColumn Header="方向" Binding="{Binding PositionSideDisplay}" Width="60"/>
                                <DataGridTextColumn Header="数量" Binding="{Binding PositionAmt, StringFormat=F4}" Width="80"/>
                                <DataGridTextColumn Header="开仓价" Binding="{Binding EntryPrice, StringFormat=F4}" Width="80"/>
                                <DataGridTextColumn Header="标记价" Binding="{Binding MarkPrice, StringFormat=F4}" Width="80"/>
                                <DataGridTextColumn Header="盈亏" Binding="{Binding UnRealizedProfit, StringFormat=F2}" Width="80"/>
                                <DataGridTextColumn Header="杠杆" Binding="{Binding Leverage}" Width="50"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>
                
                <!-- 第二行：委托和条件单 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 委托区 -->
                    <Border Grid.Column="0" Style="{StaticResource SectionStyle}" Margin="0,0,5,0">
                        <StackPanel>
                            <TextBlock Text="📋 开放委托" Style="{StaticResource HeaderStyle}"/>
                            
                            <DataGrid ItemsSource="{Binding Orders}" 
                                      SelectedItem="{Binding SelectedOrder}"
                                      AutoGenerateColumns="False"
                                      Height="180"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80"/>
                                    <DataGridTextColumn Header="方向" Binding="{Binding SideDisplay}" Width="60"/>
                                    <DataGridTextColumn Header="类型" Binding="{Binding TypeDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="数量" Binding="{Binding Quantity, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="价格" Binding="{Binding Price, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="状态" Binding="{Binding StatusDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="时间" Binding="{Binding UpdateTimeDisplay}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="刷新委托" Command="{Binding RefreshDataCommand}" Margin="0,0,10,0"/>
                                <Button Content="取消选中" Command="{Binding CancelOrderCommand}" 
                                        IsEnabled="{Binding SelectedOrder, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 条件单区 -->
                    <Border Grid.Column="1" Style="{StaticResource SectionStyle}" Margin="5,0,0,0">
                        <StackPanel>
                            <TextBlock Text="⏰ 条件单" Style="{StaticResource HeaderStyle}"/>
                            
                            <DataGrid ItemsSource="{Binding ConditionalOrders}" 
                                      SelectedItem="{Binding SelectedConditionalOrder}"
                                      AutoGenerateColumns="False"
                                      Height="180"
                                      IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="合约" Binding="{Binding Symbol}" Width="80"/>
                                    <DataGridTextColumn Header="方向" Binding="{Binding SideDisplay}" Width="60"/>
                                    <DataGridTextColumn Header="类型" Binding="{Binding TypeDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="数量" Binding="{Binding Quantity, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="触发价" Binding="{Binding TriggerPrice, StringFormat=F4}" Width="80"/>
                                    <DataGridTextColumn Header="状态" Binding="{Binding StatusDisplay}" Width="80"/>
                                    <DataGridTextColumn Header="创建时间" Binding="{Binding CreateTimeDisplay}" Width="120"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Button Content="+" Command="{Binding AddConditionalOrderCommand}" Margin="0,0,5,0" Width="30"/>
                                <Button Content="编辑" Command="{Binding EditConditionalOrderCommand}" Margin="0,0,5,0" Width="50"
                                        IsEnabled="{Binding SelectedConditionalOrder, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                <Button Content="取消" Command="{Binding CancelConditionalOrderCommand}" Margin="0,0,5,0" Width="50"
                                        IsEnabled="{Binding SelectedConditionalOrder, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                                <Button Content="删除" Command="{Binding DeleteConditionalOrderCommand}" Margin="0,0,5,0" Width="50"
                                        IsEnabled="{Binding SelectedConditionalOrder, Converter={x:Static local:NotNullToBoolConverter.Instance}}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- 下方区域：三个下单功能区 -->
        <Grid Grid.Row="3" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 市价下单 -->
            <Border Grid.Column="0" BorderBrush="#4CAF50" BorderThickness="2" CornerRadius="5" Padding="15" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="💰 市价下单" FontWeight="Bold" Foreground="#4CAF50" Margin="0,0,0,15" FontSize="16"/>
                    
                    <!-- 合约信息 -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="合约:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding MarketSymbol}" Width="120"/>
                        <Button Content="+" Command="{Binding AddCandidateSymbolCommand}" Margin="5,0,0,0" Width="30"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="最新价:" VerticalAlignment="Center" Width="60"/>
                        <TextBlock Text="{Binding LatestPrice, StringFormat=F4}" FontWeight="Bold" Foreground="Red"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="杠杆:" VerticalAlignment="Center" Width="60"/>
                        <ComboBox SelectedValue="{Binding MarketLeverage}" Width="80">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="方向:" VerticalAlignment="Center" Width="60"/>
                        <RadioButton Content="买入" IsChecked="{Binding MarketSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=BUY}" Margin="5,0"/>
                        <RadioButton Content="卖出" IsChecked="{Binding MarketSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=SELL}" Margin="5,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="数量:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding MarketQuantity}" Width="100"/>
                    </StackPanel>
                    
                    <Button Content="🚀 市价下单" Command="{Binding PlaceOrderCommand}" 
                            Height="35" FontSize="14" FontWeight="Bold"
                            Background="#4CAF50" Foreground="White"
                            Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- 限价下单 -->
            <Border Grid.Column="1" BorderBrush="#FF9800" BorderThickness="2" CornerRadius="5" Padding="15" Margin="5,0,5,0">
                <StackPanel>
                    <TextBlock Text="🎯 限价下单" FontWeight="Bold" Foreground="#FF9800" Margin="0,0,0,15" FontSize="16"/>
                    
                    <!-- 合约信息 -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="合约:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding LimitSymbol}" Width="120"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="最新价:" VerticalAlignment="Center" Width="60"/>
                        <TextBlock Text="{Binding LatestPrice, StringFormat=F4}" FontWeight="Bold" Foreground="Red"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="杠杆:" VerticalAlignment="Center" Width="60"/>
                        <ComboBox SelectedValue="{Binding LimitLeverage}" Width="80">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="方向:" VerticalAlignment="Center" Width="60"/>
                        <RadioButton Content="买入" IsChecked="{Binding LimitSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=BUY}" Margin="5,0"/>
                        <RadioButton Content="卖出" IsChecked="{Binding LimitSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=SELL}" Margin="5,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="价格:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding LimitPrice}" Width="100"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="数量:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding LimitQuantity}" Width="100"/>
                    </StackPanel>
                    
                    <Button Content="🎯 限价下单" Command="{Binding PlaceOrderCommand}" 
                            Height="35" FontSize="14" FontWeight="Bold"
                            Background="#FF9800" Foreground="White"
                            Margin="0,15,0,0"/>
                </StackPanel>
            </Border>

            <!-- 条件下单 -->
            <Border Grid.Column="2" BorderBrush="#9C27B0" BorderThickness="2" CornerRadius="5" Padding="15" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="⏰ 条件下单" FontWeight="Bold" Foreground="#9C27B0" Margin="0,0,0,15" FontSize="16"/>
                    
                    <!-- 合约信息 -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="合约:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding ConditionalSymbol}" Width="120"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="最新价:" VerticalAlignment="Center" Width="60"/>
                        <TextBlock Text="{Binding LatestPrice, StringFormat=F4}" FontWeight="Bold" Foreground="Red"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="杠杆:" VerticalAlignment="Center" Width="60"/>
                        <ComboBox SelectedValue="{Binding ConditionalLeverage}" Width="80">
                            <ComboBoxItem Content="1"/>
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="5"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="方向:" VerticalAlignment="Center" Width="60"/>
                        <RadioButton Content="买入" IsChecked="{Binding ConditionalSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=BUY}" Margin="5,0"/>
                        <RadioButton Content="卖出" IsChecked="{Binding ConditionalSide, Converter={x:Static local:StringEqualsConverter.Instance}, ConverterParameter=SELL}" Margin="5,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="触发价:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding ConditionalTriggerPrice}" Width="100"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="数量:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding ConditionalQuantity}" Width="100"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock Text="止损比例:" VerticalAlignment="Center" Width="60"/>
                        <TextBox Text="{Binding ConditionalStopLossRatio}" Width="80"/>
                        <TextBlock Text="%" VerticalAlignment="Center" Margin="2,0,0,0"/>
                    </StackPanel>
                    
                    <Button Content="⏰ 设置条件单" Command="{Binding AddConditionalOrderCommand}" 
                            Height="35" FontSize="14" FontWeight="Bold"
                            Background="#9C27B0" Foreground="White"
                            Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
